generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid()) @unique
  email String @unique
  hashPassword String
  roles Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Author {
  id String @id @default(uuid()) @unique
  nameFirst String 
  nameLast String
  birthDate DateTime
  books Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id String @id @default(uuid())
  title String
  releaseDate DateTime
  numberOfBooks Int
  numberOfPage Int  
  authors Author[]
  genres Genre[]
  readers Reader[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Genre {
  id String @id @default(uuid())
  name String
  books Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reader {
  id String @id @default(uuid())
  name String 
  books Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
  UNKNOWN
}